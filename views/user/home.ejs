        <i class="fa-solid fa-arrow-up"></i>
      </button>
    </section>
    <section id="about">
      <div class="container py-5 mb-5">

        <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3" data-aos="fade-up">About Me</h1>
        <p class="fs-5" data-aos="fade-up"><%-intro.about_details%></p>
        <div class="d-flex gap-2" data-aos="fade-up">
          <a href="/<%-intro.resume%>" target="blank" class="list-group-item"><button type="button" class="btn btn-dark">My Resume</button>
            <a href="#contact" class="btn btn-outline-secondary">Contact Me</a>
        </div>

      </div>
    </section>
    <section id="education">
      <div class="container py-5" id="featured-3">
        <h2 class="pb-2 border-bottom border-dark" data-aos="fade-up">Education</h2>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
          <% edu.map((row,i)=>{ %>
          <div class="col p-3"> 
            <div class="education p-3 rounded" data-aos="flip-right">
              <i class="fa-solid fa-graduation-cap fs-2 mb-4"></i>

              <h3 class="fs-3"><%-row.qualification_name%></h3>
              <p class="fs-5"><%-row.university%></p>

              <p>Passing Year<%-row.passing_year%> with <%-row.percentage%></p>
            </div>
          </div>
          <% }) %>

        </div>
      </div>



      <!-- SKILLS -->
    </section>

    <section id="skills" class="py-5">
      <h2 class="text-center mb-5" data-aos="fade-up">My Skills</h2>
      <div class="container">
        <div class="row justify-content-center">
          <% skills.forEach((skill, i) => { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
              <div class="card h-100 text-center" data-aos="fade-up">
                <div class="card-body">
                  <div class="image mb-3" style="overflow: hidden; max-width: 150px; max-height: 150px; margin: 0 auto;">
                    <img 
                      src="/<%- skill.skill_image %>" 
                      alt="<%- skill.skill_title %>" 
                      class="img-fluid" 
                      style="object-fit: cover; width: 100%; height: 100%;"
                    >
                  </div>
                  <h5 class="card-title"><%- skill.skill_title %></h5>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
    
    


    <!-- projects -->

    <section id="projects" class="py-5 my-5">
      <h2 class="text-center" data-aos="fade-up">My Projects</h2>
      <div class="container">
        <div class="row">
          <% projects.forEach((project) => { %>
            <div class="col-lg-4 col-md-6">
              <div class="card" data-aos="fade-up" data-aos-anchor-placement="center-bottom">
                <img src="/<%= project.project_photo %>" alt="<%= project.project_title %>" class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title"><%= project.project_title %></h5>
                  <p class="card-text"><%= project.project_details %></p>
                  <div class="d-flex gap-3 fs-4">
                   
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </section>
    
    
    <section id="contact" data-aos="fade-up">
      <div class="container">
        <div class="row my-5 py-5">
          <div class="col-md-6 d-flex flex-column align-items-start justify-content-center">
            <h1 class="display-5 fw-bold mb-3">Contact Me</h1>
            <p class="fs-5">Prefer email? Reach out to me at <i class="fa-solid envelope"></i> <a href="mailto:<%-intro.user_email%>" target="_blank"><%-intro.user_email%></a></p>
            <p class="fs-5"><i class="fa-solid fa-phone"></i><a href="tel:<%-intro.user_mobile%>"><%-intro.user_mobile%></a></p>
          </div>
          <div class="col-md-6">
            <p class="fs-5">Send me a message</p>
            <form action="/save_contact_details" method="post">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" name="name" id="name" placeholder="Your name">
                <label for="name">Your Name</label>
              </div>

              <div class="form-floating mb-3">

                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com">
                <label for="email">Your Email</label>
              </div>

              <div class="form-floating mb-3">
                <textarea name="message" id="message" class="form-control" placeholder="Hello Ankit"></textarea>
                <label for="message">Your message</label>
                <label for="message">Your message</label>
              </div>

              <button class="w-100 btn btn-lg btn-success" type="submit">Send <i class="fa-solid fa-paper-plane"></i></button>

            </form>
          </div>
        </div>
      </div>
    </section>
