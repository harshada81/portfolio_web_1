<%- include("navbar.ejs") %>

<form action="/admin/save_skills" method="post" enctype="multipart/form-data">
    <div class="container bg-dark text-white p-4">
        <h1>Add New Skills</h1>
        <div class="row">
            <div class="col-md-5">
                Skill Image (only square image allowed)
                <input type="file" name="skill_image" class="form-control">
            </div>
            <div class="col-md-5">
                Skill Title
                <input type="text" name="skill_title" class="form-control">
            </div>
            <div class="col-md-2">
                <br>
                <button class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</form>

<div class="container bg-dark text-white p-4">
    <h1>Skill List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-sm table-dark">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% skills.map((row, i) => { %>
                        <tr>
                            <td><%- i + 1 %></td>
                            <td>
                                <img src="/<%- row.skill_image %>" width="100px">
                            </td>
                            <td><%- row.skill_title %></td>
                            <td>
                                <a href="/admin/edit_skill/<%- row.skill_id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/admin/delete_skill/<%- row.skill_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this skill?');">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("footer.ejs") %>
