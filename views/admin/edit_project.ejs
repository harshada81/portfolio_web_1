
<%- include("navbar.ejs") %>

<form action="/admin/edit_project/<%- project.project_id %>" method="post" enctype="multipart/form-data">
    <div class="container bg-dark text-white p-5">
        <h1>Edit Project</h1>
        <div class="row">
            <div class="col-md-3 mb-3">
                Existing Project Photo:
                <br>
                <img src="/<%- project.project_photo %>" width="100px">
                <input type="hidden" name="existing_project_photo" value="<%- project.project_photo %>">
                <br><br>
                New Project Photo (optional):
                <input type="file" name="project_photo" class="form-control">
            </div>

            <div class="col-md-3 mb-3">
                Project Title:
                <input type="text" name="project_title" value="<%- project.project_title %>" class="form-control">
            </div>

            <div class="col-md-3 mb-3">
                Project Details:
                <input type="text" name="project_details" value="<%- project.project_details %>" class="form-control">
            </div>

            

            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary mt-3">Update Project</button>
            </div>
        </div>
    </div>
</form>

