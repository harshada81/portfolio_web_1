<%- include("navbar.ejs") %>

<form action="/admin/save_projects" method="post" enctype="multipart/form-data">
    <div class="container bg-dark text-white p-5">
        <h1>Projects Page</h1>
        <div class="row">
            <div class="col-md-3 mb-3">
                Project Photo
                <input type="file" name="project_photo" class="form-control">
            </div>

            <div class="col-md-3 mb-3">
                Project Title
                <input type="text" name="project_title" class="form-control">
            </div>

            <div class="col-md-3 mb-3">
                Project Details
                <input type="text" name="project_details" class="form-control">
            </div>

            

            <div class="col-md-12 mb-3 text-center">
                <button class="btn btn-primary mt-3">Save Project</button>
            </div>
        </div>
    </div>
</form>

<div class="container bg-dark text-white p-4">
    <h1>Project List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-sm table-dark">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Project Photo</th>
                        <th>Project Title</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.map((row, i) => { %>
                        <tr>
                            <td><%- i + 1 %></td>
                            <td>
                                <img src="/<%- row.project_photo %>" width="100px">
                            </td>
                            <td><%- row.project_title %></td>
                            <td>
                                <a href="/admin/edit_project/<%- row.project_id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/admin/delete_project/<%- row.project_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this project?');">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("footer.ejs") %>
